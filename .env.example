# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE LA APLICACIÓN GYMA
# ═══════════════════════════════════════════════════════════════

# Nombre de la aplicación
APP_NAME="GYMA - Sistema de Gestión de Gimnasio"

# Entorno: local (desarrollo) o production (producción)
APP_ENV=local

# Clave de encriptación (generar con: php artisan key:generate)
APP_KEY=

# Modo debug: true para desarrollo, false para producción
APP_DEBUG=true

# URL de la aplicación
APP_URL=http://localhost:8000

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE LOGS
# ═══════════════════════════════════════════════════════════════

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE BASE DE DATOS
# ═══════════════════════════════════════════════════════════════

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306

# Nombre de la base de datos (crear antes de migrar)
DB_DATABASE=gyma_db

# Credenciales de MySQL
DB_USERNAME=root
DB_PASSWORD=

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE DRIVERS
# ═══════════════════════════════════════════════════════════════

BROADCAST_DRIVER=log

# Driver de cache (file es recomendado para la tasa BCV)
CACHE_DRIVER=file

FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Configuración de sesiones
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE MEMCACHED (Opcional)
# ═══════════════════════════════════════════════════════════════

MEMCACHED_HOST=127.0.0.1

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE REDIS (Opcional)
# ═══════════════════════════════════════════════════════════════

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE CORREO ELECTRÓNICO (Opcional)
# ═══════════════════════════════════════════════════════════════
# Descomenta y configura si deseas enviar correos

MAIL_MAILER=smtp
# Para Gmail usa: smtp.gmail.com
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@gyma.com"
MAIL_FROM_NAME="${APP_NAME}"

# Ejemplo de configuración para Gmail:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=tu_email@gmail.com
# MAIL_PASSWORD=tu_contraseña_de_aplicacion
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@gyma.com"
# MAIL_FROM_NAME="${APP_NAME}"

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE AWS (Opcional)
# ═══════════════════════════════════════════════════════════════

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ═══════════════════════════════════════════════════════════════
# CONFIGURACIÓN DE PUSHER (Opcional)
# ═══════════════════════════════════════════════════════════════

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ═══════════════════════════════════════════════════════════════
# NOTAS IMPORTANTES
# ═══════════════════════════════════════════════════════════════
#
# 1. Después de copiar este archivo a .env, ejecuta:
#    php artisan key:generate
#
# 2. Crea la base de datos antes de ejecutar migraciones:
#    CREATE DATABASE gyma_db;
#
# 3. La tasa BCV se actualiza automáticamente desde APIs externas
#    y se cachea por 1 hora para optimizar el rendimiento
#
# 4. Las fotos de miembros se almacenan en storage/app/public/fotos
#    Ejecuta: php artisan storage:link
#
# ═══════════════════════════════════════════════════════════════
